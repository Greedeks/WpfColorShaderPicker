<Window x:Class="WpfColorShaderPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfColorShaderPicker"
        xmlns:hb="clr-namespace:WpfColorShaderPicker.HueColorPicker"
        xmlns:cp="clr-namespace:WpfColorShaderPicker.ColorWheelPicker"
        mc:Ignorable="d"
        Title="ColorPicker" Height="450" Width="800" Background="DarkGray">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Label Content="HueBarColorPicker" FontWeight="Medium" FontSize="16px" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="auto" Height="auto"/>
                <hb:HueBar Width="200" Height="40"/>
            </StackPanel>
            <StackPanel  Margin="50,0,0,0">
                <Label Content="ColorWheelPicker" FontWeight="Medium" FontSize="16px" HorizontalContentAlignment="Center" Width="auto" Height="auto"/>
                <cp:ColorPicker Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
